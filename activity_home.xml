<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sky"
        tools:context=".HomeActivity" >
    <EditText
            android:layout_width="278dp"
            android:layout_height="51dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="70"
            android:hint="Search or enter url"
            android:id="@+id/search_url_home" android:layout_toStartOf="@+id/search_button_home"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" android:layout_toLeftOf="@+id/search_button_home"
            android:background="#A0A0D8" android:textSize="30sp"/>
    <Button
            android:text="@android:string/search_go"
            android:layout_width="123dp"
            android:layout_height="wrap_content" android:id="@+id/search_button_home"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="1dp" android:layout_marginEnd="1dp"
            android:background="#EE99B4" android:textSize="24sp"/>
    <Button
            android:text="FaceBook"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/face_book" android:layout_alignParentBottom="true"
            android:layout_marginBottom="306dp" android:layout_alignRight="@+id/search_button_home"
            android:layout_marginRight="296dp" android:layout_marginEnd="296dp"
            android:layout_alignEnd="@+id/search_button_home"
            android:background="#311EE0" android:textColor="#F8F4F4" android:textSize="18sp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
    <Button
            android:text="Instagram"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/instagram" android:layout_alignParentBottom="true"
            android:layout_marginBottom="306dp"
            android:layout_marginRight="157dp" android:layout_marginEnd="157dp"
            android:background="#E91E63" android:textSize="18sp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    <Button
            android:text="YouTube"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/youtube"
            android:layout_marginRight="19dp" android:layout_marginEnd="19dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="307dp" android:background="#FA1A1A"
            android:textSize="18sp" android:textColor="@android:color/background_light"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
    <Button
            android:text="Hackerank"
            android:layout_width="110dp"
            android:layout_height="wrap_content" android:id="@+id/hackerrank"
            android:layout_marginRight="291dp" android:layout_marginEnd="291dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="175dp" android:background="#46EB4C"
            android:textSize="18sp" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
    <Button
            android:text="Google"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/google"
            android:layout_alignRight="@+id/search_button_home"
            android:layout_marginRight="156dp" android:layout_marginEnd="156dp"
            android:layout_alignEnd="@+id/search_button_home"
            android:layout_alignParentBottom="true" android:layout_marginBottom="175dp"
            android:background="#F5F3F3" android:textSize="18sp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    <Button
            android:text="Gmail"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/gmail"
            android:layout_marginRight="19dp" android:layout_marginEnd="19dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="177dp" android:background="#D06BEC"
            android:textSize="18sp" android:textColor="#FFFFFF" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
</RelativeLayout>